<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rea_back"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/blue_title" >
    <!--带“首页”字样的标题栏-->

    <!--“首页”字样RadioButton-->
    <RadioButton
        android:id="@+id/rb_back"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dip"
        android:button="@drawable/right"
        android:drawablePadding="5dip"
        android:paddingLeft="5dip"
        android:text="@string/main"
        android:textColor="@color/sure_textclolor" />
    <!--动态加载文字的TextView，标题栏正中表示当前标题的文字-->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <!--“标题栏”右侧radiobutton-->
    <RadioButton
        android:id="@+id/rbRight2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dip"
        android:button="@null"
        android:drawablePadding="5dip"
        android:drawableRight="@drawable/icon_main_right_bottom"
        android:paddingLeft="5dip"
        android:onClick="rbRight2"
        android:text="@string/main_bar_right2"
        android:textColor="@color/sure_textclolor"
        android:visibility="gone"
         />

</RelativeLayout>