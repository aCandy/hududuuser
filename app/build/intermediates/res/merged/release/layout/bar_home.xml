<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/color_bar" >
    <!--带用户头像的标题栏-->


    <!--用户头像LinearLayout-->
    <LinearLayout
        android:id="@+id/rea_main_info"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <!--头像旁边表示更多信息的三个小点-->
        <ImageView
            android:id="@+id/img_dian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dip"
            android:background="@drawable/icon_main_bar_dot" />
        <!--放置用户头像的自定义ImageView-->
        <com.jizhi.hududu.uclient.widget.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dip"
            android:scaleType="centerCrop"
            android:background="@drawable/user_head" />
    </LinearLayout>

    <!--显示“呼多多”三个字的ImageView-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/main_bar_title" />
